{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "build": "deno run -A build.ts",
    "run": "sh -c 'deno bundle src/ts/main.ts > public/js/main.js && deno run -A encrypt_units.ts && go run .'",
    "watch": "deno run -A --watch=./src/units encrypt_units.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/http": "jsr:@std/http@^1.0.20"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
  }
}
